<div id="contact">
  <h1>contact us</h1>
  <p>submit your question here &excl;</p>
  <div id="contactcontainer">
    <form action="/contact" method="post">
      <label for="name">name<span>*</span></label>
      <input
        type="text"
        name="name"
        id="name"
        placeholder="enter your name"
        required
      />

      <label for="mno">mobile_number<span>*</span></label>
      <input
        type="number"
        name="mno"
        id="mno"
        placeholder="enter your mobile_number"
        required
      />

      <label for="mail">email<span>*</span></label>
      <input
        type="email"
        name="mail"
        id="mail"
        placeholder="enter your email_id "
        required
      />

      <label for="msg">your message<span>*</span></label>
      <textarea
        name="msg"
        id="msg"
        cols="30"
        rows="7"
        placeholder="write your meassge here"
        required
      ></textarea>

      <input type="submit" value="send message" id="submitmsg" />

    </form>
    <div id="map">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12110.835552241462!2d72.8739499741931!3d21.212752388037117!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be04f730e089c5f%3A0x9b7d1de1ab42693c!2sThakordwar%20Society%2C%20Punagam%2C%20Varachha%2C%20Surat%2C%20Gujarat%20395006!5e0!3m2!1sen!2sin!4v1638976988937!5m2!1sen!2sin"
        width="100%"
        height="510"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        alt="Map.."
      ></iframe>

    </div>
  </div>

</div>